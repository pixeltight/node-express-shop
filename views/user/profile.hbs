<div class="row">
  <div class="d-fles justify-content-center align-items-center">
    <h1>User Profile</h1>
    <hr>
    <h2>My Orders</h2>
    {{#each orders}}
      <div class="card text-center">
        <div class="card-body">
          <ul class="list-group">
            {{#each this.items}}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                {{this.item.title}} | {{this.qty}} widgets
                <span class="badge badge-primary badge-pill">{{this.price}}</span>
              </li>
            {{/each}}
          </ul>
        </div>
        <div class="card-footer text-muted">
          <strong>Total Price: {{this.cart.totalPrice}}</strong>
        </div>
      </div>
    {{/each}}
  </div>
</div>